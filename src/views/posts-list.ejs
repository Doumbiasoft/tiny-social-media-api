<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <link rel="stylesheet" href="/assets/styles/styles.css">
    <title>Tiny Social Media - Posts</title>
</head>

<body class="bg-gradient-to-br from-gray-50 to-blue-50 min-h-screen">
    <!-- Navigation -->
    <nav class="bg-[#1a507c] shadow-lg border-b border-gray-200 sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <div class="flex items-center">
                    <h1 class="text-2xl font-bold text-white">Tiny Social</h1>
                    <span class="ml-3 px-3 py-1 bg-blue-100 text-blue-800 text-sm font-medium rounded-full">
                        <%= posts.length %> Posts
                    </span>
                </div>
                <div class="flex space-x-4">
                    <a href="/api/v1/views/add-post"
                        class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-black cursor-pointer bg-[#f9c14f] hover:bg-[#f58831] transition-all duration-200 transform hover:scale-105 shadow-md hover:shadow-lg">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                        </svg>
                        Create Post
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="max-w-4xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
        <!-- Header Section -->
        <div class="text-center mb-12">
            <h2 class="text-4xl font-bold text-gray-900 mb-4">Latest Posts</h2>
            <p class="text-lg text-gray-600 max-w-2xl mx-auto">
                Discover and share amazing content with our community
            </p>
        </div>

        <!-- Posts Container -->
        <div class="space-y-6">
            <% if (posts.length===0) { %>
                <!-- Empty State -->
                <div class="text-center py-16">
                    <div class="w-24 h-24 mx-auto mb-6 bg-gray-100 rounded-full flex items-center justify-center">
                        <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z">
                            </path>
                        </svg>
                    </div>
                    <h3 class="text-xl font-medium text-gray-900 mb-2">No posts yet</h3>
                    <p class="text-gray-500 mb-6">Be the first to share something with the community!</p>
                    <a href="/api/v1/views/add-post"
                        class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-gradient-to-r from-blue-500 to-indigo-600 hover:from-blue-600 hover:to-indigo-700 transition-all duration-200">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                        </svg>
                        Create Your First Post
                    </a>
                </div>
                <% } else { %>
                    <!-- Posts List -->
                    <% posts.forEach((post, index)=> { %>
                        <article
                            class="bg-white rounded-xl shadow-md hover:shadow-lg transition-shadow duration-300 overflow-hidden border border-gray-100">
                            <!-- Post Header -->
                            <div class="p-6 pb-4">
                                <div class="flex items-center space-x-4">
                                    <div class="relative">
                                        <img src="/assets/images/user.png"
                                            class="h-12 w-12 rounded-full object-cover border-2 border-gray-200"
                                            alt="<%= post.name %>'s avatar">
                                        <div
                                            class="absolute -bottom-1 -right-1 w-4 h-4 bg-green-400 border-2 border-white rounded-full">
                                        </div>
                                    </div>
                                    <div class="flex-1 min-w-0">
                                        <h3 class="text-lg font-semibold text-gray-900 truncate">
                                            <%= post.name %>
                                        </h3>
                                        <p class="text-sm text-gray-500 truncate">
                                            <%= post.email %>
                                        </p>
                                    </div>
                                    <div class="flex items-center space-x-2">
                                        <span
                                            class="px-3 py-1 bg-blue-50 text-blue-700 text-xs font-medium rounded-full">
                                            Post #<%= post.id %>
                                        </span>
                                    </div>
                                </div>
                            </div>

                            <!-- Post Content -->
                            <div class="px-6 pb-6">
                                <h2 class="text-xl font-bold text-gray-900 mb-3 leading-tight">
                                    <%= post.title %>
                                </h2>
                                <div class="prose max-w-none">
                                    <p class="text-gray-700 leading-relaxed">
                                        <%= post.content %>
                                    </p>
                                </div>
                            </div>

                            <!-- Post Footer -->
                            <div class="bg-gray-50 px-6 py-4">
                                <div class="flex items-center justify-between">
                                    <div class="flex space-x-6">
                                        <!-- Like Button -->
                                        <button
                                            class="group cursor-pointer flex items-center space-x-2 text-gray-500 hover:text-red-500 transition-colors duration-200">
                                            <div
                                                class="p-2 rounded-full group-hover:bg-red-50 transition-colors duration-200">
                                                <svg class="w-5 h-5" fill="none" stroke="currentColor"
                                                    viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round"
                                                        stroke-width="2"
                                                        d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z">
                                                    </path>
                                                </svg>
                                            </div>
                                            <span class="text-sm font-medium">Like</span>
                                        </button>

                                        <!-- Comment Button -->
                                        <button
                                            class="group cursor-pointer flex items-center space-x-2 text-gray-500 hover:text-blue-500 transition-colors duration-200">
                                            <div
                                                class="p-2 rounded-full group-hover:bg-blue-50 transition-colors duration-200">
                                                <svg class="w-5 h-5" fill="none" stroke="currentColor"
                                                    viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round"
                                                        stroke-width="2"
                                                        d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z">
                                                    </path>
                                                </svg>
                                            </div>
                                            <span class="text-sm font-medium">Comment</span>
                                        </button>
                                    </div>

                                    <div class="text-xs text-gray-400">
                                        Post <%= index + 1 %> of <%= posts.length %>
                                    </div>
                                </div>
                            </div>
                        </article>
                        <% }); %>
                            <% } %>
        </div>


    </div>

    <!-- Footer -->
    <footer class="bg-white border-t border-gray-200 mt-16">
        <div class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
            <div class="text-center">
                <p class="text-gray-500 text-sm">
                    Â© 2025 Tiny Social Media.
                </p>
            </div>
        </div>
    </footer>
</body>

</html>